#containerlogueando
	#logo
		img(src="images/logo.png")
	#user
		.avatar
			.inner
			img(src="images/demo/avi_1")
		.text
			h4 Hola usuario logueado!

	#loginbox(ng-class="{logueando: logueando, recuperando: recuperando, registrando: registrando}")
		form#loginform(ng-submit="" ng-show="logueando" name="frmLogin")
			p Ingresa tu usuario y contraseña para continuar.
			.input-group.input-sm
				span.input-group-addon
					i.fa.fa-user
				input#username.form-control(type="text", placeholder="Usuario", ng-class="frmLogin")
			.input-group
				span.input-group-addon
					i.fa.fa-lock
				input#password.form-control(type="password", placeholder="Contraseña")
			.form-actions.clearfix
				.pull-left
					a.flip-link.to-register.blue(href="" ng-click="to_registrando()")
						|Crear cuenta nueva
				.pull-right
					a.flip-link.to-recover.grey(href="" ng-click="to_recuperando()")
						|¿Olvidaste tu contraseña?
				input.btn.btn-block.btn-primary(type="submit", value="Entrar")
			.footer-login
				.pull-left.text
					|Ingresa con
				.pull-right.btn-social
					a.btn.btn-facebook
						i.fa.fa-facebook
					a.btn.btn-twitter
						i.fa.fa-twitter
					a.btn.btn-google-plus
						i.fa.fa-google-plus

		form#recoverform(ng-submit="" ng-show="recuperando")
			p Ingresa tu e-mail y te enviaremos las instrucciones para recuperar tu password.
			.input-group
				span.input-group-addon
					i.fa.fa-envelope
				input.form-control(type="text" placeholder="Correo electrónico")
			.form-actions.clearfix
				.pull-left
					a.flip-link.to-login.grey(href="" ng-click="to_logueando()") Click para loguearse
				.pull-right
					a.flip-link.to-register.blue(href="" ng-click="to_registrando()") Crear nueva cuenta
				input.btn.btn-block.btn-inverse(type="submit" value="Recuperar")

		form#registerform(ng-submit="" ng-show="registrando")
			p Ingrese la información requerida para registrar
			.input-group
				span.input-group-addon
					i.fa.fa-user
				input.form-control(type="text" placeholder="Ingrese nombre de usuario")
			.input-group
				span.input-group-addon
					i.fa.fa-lock
				input.form-control(type="text" placeholder="Ingresa una contraseña")
			.input-group
				span.input-group-addon
					i.fa.fa-lock
				input.form-control(type="text" placeholder="Repite la contraseña")
			.input-group
				span.input-group-addon
					i.fa.fa-envelope
				input.form-control(type="text" placeholder="Correo electrónico")
			.form-actions.clearfix
				.pull-left
					a.grey.flip-link.to-login(href="" ng-click="to_logueando()")
						|Click para loguearse
				.pull-right
					a.grey.flip-link.to-recover(href="" ng-click="to_recuperando()")
						|¿Perdiste tu contraseña?
				input.btn.btn-block.btn-success(type="submit" value="Registrar")





